{
  "name": "@cybernetic1/companies-house-mcp",
  "version": "1.0.0",
  "description": "MCP server for UK Companies House API - search companies, directors, filings, PSC",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "companies-house-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "companies-house",
    "uk-companies",
    "directors",
    "api",
    "typescript"
  ],
  "author": {
    "name": "Steven Atkinson",
    "email": "steve@cybernetic1.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cybernetic1/companies-house-mcp"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@vitest/coverage-v8": "^2.1.1",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.39.1",
    "vite": "^5.4.8",
    "vitest": "^2.1.1"
  }
}
